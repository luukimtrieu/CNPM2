<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPayrollFragment"
    android:orientation="vertical"
    android:background="@drawable/gradient_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="230dp"
            android:src="@drawable/hacker" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNamePr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User 1"
                android:textSize="26sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp" />
            <TextView
                android:id="@+id/textViewIdPr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID User 1"
                android:textSize="26sp"
                android:layout_marginStart="10dp" />
            <TextView
                android:id="@+id/textViewChucVuPr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work space"
                android:textSize="26sp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:background="@drawable/vie_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bảng lương chi tiết"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tháng:"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="top|start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vị trí:"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="top|start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lương cơ bản:"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="top|start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số giờ tăng ca:"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="top|start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lương tăng ca:"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="top|start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số ngày nghỉ:"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="top|start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thưởng thêm:"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="top|start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng:"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_gravity="top|start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvThang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="top|end"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvViTri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B/A"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="top|end"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvLuongCoban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30.000.000đ"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="top|end"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvSoGioTangCa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26h"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="top|end"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvLuongTangCa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.000.000đ"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="top|end"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvSoNgayNghi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/30"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="top|end"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvThuongThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.000đ"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_gravity="top|end"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvTong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37.500.000đ"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_gravity="top|end"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"/>
        </GridLayout>
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:background="@drawable/radius_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />
    </LinearLayout>

</LinearLayout>